{
  "name": "@vogent/vogent-web-client",
  "version": "0.1.5",
  "license": "MIT",
  "dependencies": {
    "@apollo/client": "^3.12.4",
    "@vonage/client-sdk": "^1.7.2",
    "graphql": "^16.10.0",
    "graphql-ws": "^5.16.0",
    "livekit-client": "2.15.8"
  },
  "main": "src/index.ts",
  "types": "src/index.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "publishConfig": {
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
      "dist"
    ],
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "bun run tsc",
    "prepublishOnly": "bun run build",
    "release:patch": "bun version patch && git push && git push --tags",
    "release:minor": "bun version minor && git push && git push --tags",
    "release:major": "bun version major && git push && git push --tags"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/client-preset": "^4.5.1",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@types/node": "^22.10.7",
    "@types/react": "^19.0.7",
    "typescript": "^5.7.3"
  }
}
